<% content_for :body_content_title do %>
  <%= @student.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>User</h1>
    <p>
      <%=raw @student.user_id %>
    </p>
  </section>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @student.name %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="students">
      <% @students.each do |student| %>
        <li>
          <%= link_to student.name, refinery.enrollment_student_path(student) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
