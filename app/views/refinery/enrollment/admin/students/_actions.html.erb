<ul>
  <% if ::Refinery::Enrollment::Admin::StudentsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.enrollment_admin_students_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_enrollment_admin_student_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Enrollment::Admin::StudentsController.sortable? && ::Refinery::Enrollment::Student.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Students"),
                 refinery.enrollment_admin_students_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Students"),
                 refinery.enrollment_admin_students_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
